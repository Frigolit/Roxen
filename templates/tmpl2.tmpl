  <cset variable=shadow></cset>
  <if variable='h3_shadow is 1'><cset variable=shadow>shadow=60,1</cset></if>
  <formoutput quote='%'><p><gtext fg=$$h3_color$$ bg=$$bg_color$$
    nfont=$$h3_font$$ %shadow% $$h3_size$$>$h3$</gtext><p></formoutput>
</tmplblock>

<html>
<head><title><as-meta var=title></title></head>
<body bgcolor='$$bg_color$$' text='$$text_color$$' link='$$link_color$$'
      vlink='$$vlink_color$$' alink='$$alink_color$$'>
<tmplinsert tag=content>
</body>
</html>