  <cset variable=h2_shadow>$$h2_shadow$$</cset>
  <cset variable=shadow></cset>
  <if variable='h2_shadow is 1'><cset variable=shadow>shadow=60,0</cset></if>
  <formoutput quote='%'><p><gtext fg=$$h2_color$$ bg=$$bg_color$$
    nfont=$$h2_font$$ %shadow% $$h2_size$$>$h2$</gtext><p></formoutput>
</tmplblock>

