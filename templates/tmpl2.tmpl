<tmplblock tag=h1>
  <cset variable=h1_shadow>$$h1_shadow$$</cset>
  <cset variable=shadow></cset>
  <if variable='h1_shadow is 1'><cset variable=shadow>shadow=60,0.1</cset></if>
  <formoutput quote='%'><p><gtext fg=$$h1_color$$ bg=$$bg_color$$
    nfont=$$h1_font$$ %shadow% $$h1_size$$>$h1$</gtext><p></formoutput>
</tmplblock>

