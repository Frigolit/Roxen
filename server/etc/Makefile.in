#
# Sub makefile for extracting autodoc
#
# $Id: Makefile.in,v 1.3 2001/11/16 16:06:14 nilsson Exp $
#

PIKE=pike

VPATH=@SRCDIR@:.

SRCDIR=@SRCDIR@
REFDOC=@REFDOC@
ROOT=@ROOT@
BUILDROT=@BUILDROOT@
EXTARGS=@EXTARGS@

XMLFILES=

all: extract

extract: xml recurse

.SUFFIXES: .c .pike .pike.in .pmod .pmod.in .xml

.c.xml: $(REFDOC)/bin/extract.pike $(REFDOC)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(REFDOC)/bin/extract.pike "$<" $(BUILDROOT)/images $(EXTARGS) >"$@.new" && \
	  mv -f "$@.new" "$@"

.pike.xml: $(REFDOC)/bin/extract.pike $(REFDOC)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(REFDOC)/bin/extract.pike "$<" $(BUILDROOT)/images $(EXTARGS) >"$@.new" && \
	  mv -f "$@.new" "$@"

.pike.in.xml: $(REFDOC)/bin/extract.pike $(REFDOC)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(REFDOC)/bin/extract.pike "$<" $(BUILDROOT)/images $(EXTARGS) >"$@.new" && \
	  mv -f "$@.new" "$@"

.pmod.xml: $(REFDOC)/bin/extract.pike $(REFDOC)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(REFDOC)/bin/extract.pike "$<" $(BUILDROOT)/images $(EXTARGS) >"$@.new" && \
	  mv -f "$@.new" "$@"

.pmod.in.xml: $(REFDOC)/bin/extract.pike $(REFDOC)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(REFDOC)/bin/extract.pike "$<" $(BUILDROOT)/images $(EXTARGS) >"$@.new" && \
	  mv -f "$@.new" "$@"

xml:
	$(MAKE) PIKE="$(PIKE)" `(cd $(SRCDIR) && \
	  (ls -d *.c *.pike *.pike.in *.pmod *.pmod.in 2>/dev/null | \
	  while read f; do if [ -f "$$f" ]; then echo $$f; fi; done))| \
	  sed -e 's/\.c$$/\.xml/' -e 's/\.pike$$/\.xml/' \
	      -e 's/\.pike.in$$/\.xml/' -e 's/\.pmod\.in$$/\.xml/' \
	      -e 's/\.pmod$$/\.xml/' ` xml_dummy

xml_dummy:


join: recurse_join
	@if ls */*.xml >/dev/null 2>&1; then \
	  $(MAKE) PIKE="$(PIKE)" XMLFILES="`echo */*.xml`" sub_manual.xml || \
	    exit 1; \
	fi

sub_manual.xml: $(XMLFILES) $(REFDOC)/bin/join.pike
	@$(PIKE) $(REFDOC)/bin/join.pike sub_manual.xml $(XMLFILES)

recurse_join:
	@for d in */.; do \
	  if test -d "$$d"; then \
	    (cd $$d && make PIKE="$(PIKE)" join) || exit 1; \
	  fi; \
	done

recurse: subdirectories
	@for d in */.; do \
	  if test -d "$$d"; then \
	    (cd $$d && make PIKE="$(PIKE)" extract) || exit 1; \
	  fi; \
	done

subdirectories:
	@for d in `cd $(SRCDIR) && echo *` CVS; do \
	  if test "$$d" = "CVS" -o ! -d "$(SRCDIR)/$$d/."; then :; else \
	    if test -d "$$d"; then :; else \
	      mkdir "$$d" || exit 1; \
	    fi; \
	    if test -f "$$d/Makefile"; then :; else \
	      sed -e "s#@""SRCDIR@#../$(SRCDIR)/$$d#" \
	          -e "s#@""REFDOC@#$(REFDOC)#" \
	          -e "s#@""ROOT@#../$(ROOT)#" \
	          -e "s#@""BUILDROOT@#../$(BUILDROOT)#" \
	          -e "s#@""EXTARGS@#$(EXTARGS)#" \
	        <$(ROOT)/Makefile.in >"$$d/Makefile" || exit 1; \
	    fi; \
	  fi; \
	done

Makefile: $(ROOT)/Makefile.in
	cd $(BUILDROOT) && find . -name Makefile -exec rm {} \;
	@echo Please rerun make.
	@exit 1

clean:
	@rm *.xml *.xml.new || /bin/true
	@for f in *; do if [ -d "$$f/." ]; then rm -rf "$$f"; else :; fi; done
