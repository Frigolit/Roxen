#! /bin/sh
#
# $Id: perlrun,v 1.3 2001/06/15 07:57:16 leif Exp $

DIR="`dirname $0`"
if [ ! -f "$DIR/perlhelper" ] ; then
  DIR="`pwd`"
fi
if [ ! -f "$DIR/perlhelper" ] ; then
  echo >&2 "$0 $$: unable to find 'perlhelper' script"
  exit 1
fi
for X in /usr/local/bin /usr/bin /bin
do
  if [ -f $X/perl ] ; then
     exec $X/perl "$DIR/perlhelper" $*
  fi
done
echo >&2 "$0 $$: unable to locate Perl interpreter"
exit 1
