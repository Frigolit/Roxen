@SET_MAKE@
CC=@CC@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@

SHELL=/bin/sh

all:
	(cd libfcgi; $(MAKE) all "CC=$(CC)" "CFLAGS=$(CFLAGS)" "LDFLAGS=$(LDFLAGS)")
	(cd cgi-fcgi; $(MAKE) all "CC=$(CC)" "CFLAGS=$(CFLAGS)" "LDFLAGS=$(LDFLAGS)")

reconfig: clean
	uname -rs >config.uname
	./configure

clean:
	rm -f *.a *.o core.* errs *~ \#* TAGS *.E a.out
	rm -f *.a *.o core.* errs *~ \#* TAGS *.E a.out
	rm -f config.cache config.log config.status config.uname
	(cd libfcgi; $(MAKE) clean "CC=$(CC)" "CFLAGS=$(CFLAGS)" "LDFLAGS=$(LDFLAGS)")
	(cd cgi-fcgi; $(MAKE) clean "CC=$(CC)" "CFLAGS=$(CFLAGS)" "LDFLAGS=$(LDFLAGS)")

