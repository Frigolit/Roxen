<formoutput quote=$ noparse>
  <get-mail mail=$mail_id$ noparse>
    <set variable=foo value=#flag_am_editable#>
    <set variable=bar value=#flag_am_sent#>
    <if not variable="foo is "> 
       <formoutput quote=%>
       <font size=+2>
        This is a 
        <if not variable="bar is "> 
           sent mail
        <ul>
          <li><a href='edit.html?mail_id=%mail_id%&randomness=%sone_number%'>Edit it again</a> 
          <li><a href='?delete.x=1&mail_id=%mail_id%&mailbox_id=%mailbox_id%&randomness=%sone_number%'>delete it.</a>
        </ul>
        </if>
        <else>draft
        <ul>
          <li><a href='edit.html?mail_id=%mail_id%&randomness=%sone_number%'>continue the editing</a> 
          <li><a href='?delete.x=1&mail_id=%mail_id%&mailbox_id=%mailbox_id%&randomness=%sone_number%'>delete it.</a>
        </ul>
        </else>
       </font>
       </formoutput><br>
    </if>
    <table cellspacing=0 border=0 cellpadding=1 bgcolor=black><tr><td>
    <table cellspacing=0 border=0 cellpadding=2 bgcolor=##ffeedd
      <tr>
        <td valign=top colspan=4><font color=##550000><b>#subject#</b></td>
      </tr>
      <tr>
        <td valign=top><font color=black>Sender:</td>
        <td valign=top><table border=0 cellpadding=0 cellspacing=0>
               <tr>
                <td><mail-xface align=right>#x-face:quote=none#</mail-xface></td>
                <td valign=top><font color=##550000>#from#</td>
               </tr></table></td>
        <td valign=top><font color=black>To:</td> 
        <td valign=top><font color=##550000>#to#</td>
      </tr>
      <tr>
        <td valign=top><font color=black>Sent:</td>
        <td valign=top><font color=##550000>#reldate#</td>
        <td valign=bottom><font color=black>Date:</td>  
        <td valign=bottom><font color=##550000><font size=-1>#date#</font></td>
      </tr>
    </table></td></tr></table>
    <parse-smileys noparse preparse><mail-body-parts mail=$mail_id$>#body:quote=none#</mail-body-parts></parse-smileys>
  </get-mail>
</formoutput>
